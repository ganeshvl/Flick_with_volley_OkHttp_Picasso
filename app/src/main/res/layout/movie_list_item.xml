<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:translationZ="100dp"
                android:background="#27ae60"
                android:descendantFocusability="blocksDescendants"
    >

    <com.android.volley.toolbox.NetworkImageView
        android:layout_width="220dp"
        android:layout_height="230dp"
        android:id="@+id/movie_image"
        android:layout_alignParentEnd="true"
        android:background="@drawable/minions"
        android:layout_alignParentTop="true"
        android:maxWidth="@dimen/activity_vertical_margin"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="Ant Man"
        android:id="@+id/movie_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:textColor="#ffffff"
        />



    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/movie_short_plot"
        android:layout_below="@+id/movie_title"
        android:layout_alignParentStart="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:width="365dp"
        tools:text= "Armed with a super-suit with the astonishing ability to shrink."
        android:layout_marginBottom="5dp"
        android:textColor="#ffffff"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Genre"
        android:id="@+id/genre"
        android:layout_below="@+id/movie_short_plot"
        android:layout_alignParentStart="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="5dp"
        tools:text= "Genre"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/release_date"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/genre"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        tools:text = "Release date"
        android:text = "Release date"
        android:textColor="#ffffff"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Content type"
        android:id="@+id/content_type"
        android:layout_below="@+id/release_date"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:textColor="#ffffff"
        android:width="365dp"/>


</RelativeLayout>